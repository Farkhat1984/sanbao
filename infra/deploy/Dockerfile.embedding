FROM python:3.12-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    fastapi==0.115.* \
    uvicorn[standard]==0.34.* \
    httpx==0.28.* \
    pydantic==2.*

COPY ai_cortex/scripts/services/embedding_service.py /app/embedding_service.py

EXPOSE 8097

ENV DEEPINFRA_API_KEY=""
ENV DEEPINFRA_MODEL="Qwen/Qwen3-Embedding-8B"

RUN adduser --disabled-password --gecos '' appuser
USER appuser

CMD ["python", "embedding_service.py", "--port", "8097"]
